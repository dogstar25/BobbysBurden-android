{
    "version": 3,
    "cmakeMinimumRequired": { "major": 3, "minor": 28 },
    "configurePresets": [
        {
            "name": "android-debug",
            "displayName": "Android Debug (arm64 + vcpkg)",
            "generator": "Ninja",
            "binaryDir": "build/android-debug",
            "environment": {
                "ANDROID_NDK_HOME": "C:/Users/you/AppData/Local/Android/Sdk/ndk/26.1.10909125",
                "VCPKG_ROOT": "C:/projects/vcpkg"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/MobyDick/scripts/toolchains/android-vcpkg.cmake",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/MobyDick",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed",
                "VCPKG_TARGET_TRIPLET": "arm64-android",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-24",
                "CMAKE_ANDROID_STL_TYPE": "c++_static"
            }
        },
        {
            "name": "android-release",
            "displayName": "Android Release (arm64 + vcpkg)",
            "generator": "Ninja",
            "binaryDir": "build/android-release",
            "inherits": "android-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        { "name": "android-debug", "configurePreset": "android-debug", "jobs": 12 },
        { "name": "android-release", "configurePreset": "android-release", "jobs": 12 }
    ]
}
